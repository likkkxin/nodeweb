                   function IsNull(str) {
               return (Trim(str) == "") ? false : true;
           }

           function Trim(str) {
             return str.replace(/(^\s*)|(\s*$)/g, "");
           }

           function replaceHTML(str) {
             str = str.replace(/<[^>].*?>/g, "");
             str = str.replace(/&nbsp;/g, "");
             return str;
           }

           var content = document.getElementById("editor").value;
