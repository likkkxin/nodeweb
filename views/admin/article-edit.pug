extends ./common/layout2
block main 
  .main

    .title
      h4 5b9a716cb2d2bf17706bcc0a

    form.form-container(class="form-container" action="/admin/article-add" method="post" enctype="multipart/form-data" id="articleform")
      .form-group
        label 标题
        input.form-control(type="text" placeholder="请输入文章标题" name="title")
      .form-group
        label 作者
        input.form-control(type="text", readonly name="author" value=userinfo._id )
      .form-group
        label 发布时间
        input.form-control(type="date" name="publishdate")
      .form-group
        label(for="exampleInputFile") 文章封面
        input(type="file" name="cover" id="file" )
        .thumbnail-waper
          img.img-thumbnail(src="" id="preview")
      .form-group
        label 内容
        textarea(class="form-control" id="editor" name="content" )
      .buttons
        input.btn.btn-primary(type="submit")


