html
  body
    form.form-container(action="/admin/article-add", method="post", enctype="multipart/form-data")
      .form-group
        label 标题
        input.form-control(type="text", placeholder="请输入文章标题")
      .form-group
        label 作者
        input.form-control(type="text", readonly)
      .form-group
        label 发布时间
        input.form-control(type="date")
      .form-group
        label(for="exampleInputFile") 文章封面
        input(type="file")
        .thumbnail-waper
          img.img-thumbnail(src=)
      .form-group
        label 内容
        textarea#editor.form-control(name="content")
      .buttons
        input.btn.btn-primary(type="submit")