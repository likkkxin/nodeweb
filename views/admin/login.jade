doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        title 用户登录
        link(rel="stylesheet" href="/admin/lib/bootstrap/css/bootstrap.min.css")
        link(rel="stylesheet" href="/admin/css/base.css")
    body
        .login-body
            .login-container
                h4.title 黑马程序员 - 博客管理员登录
                .login
                    form(action="/admin/login" id="loginForm" method="post")
                        .form-group
                            label 邮件
                            input.form-control(type="email" placeholder="请输入邮件地址" name="email")
                        .form-group
                            label 密码
                            input.form-control(type="password" placeholder="请输入密码" name="password")
                        button.btn.btn-primary(type="submit") 登录
                .tips
script(src="/admin/lib/jquery/dist/jquery.min.js")
script(src="/admin/lib/bootstrap/js/bootstrap.min.js")
script(src="/admin/js/common.js")

script(type="text/javascript").
    $('#loginForm').on("submit", function () {
           var data =serializetoJson($(this));
                if (data.email.trim().length==0){
                    alert("请输入邮箱地址！")
                    return false
                        }
                if (data.password.trim().length==0){
                    alert("请输入密码！")
                    return false                   
                    }  
            
    })